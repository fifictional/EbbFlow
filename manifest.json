{
  "manifest_version": 3,
  "name": "EbbFlow ADHD Assistant",
  "version": "1.0.0",
  "description": "Adaptive writing support for ADHD/neurodivergent academics on Overleaf. ",
  
  "permissions": [
    "storage",
    "activeTab"
  ],
  
  "host_permissions": [
    "*://*.overleaf.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [{
    "matches": ["*://*.overleaf.com/*"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "EbbFlow"
  },
  
  "icons": {
    "16": "icons/favicon_io/favicon-16x16.png",
    "48": "icons/favicon_io/android-chrome-192x192.png",
    "128": "icons/favicon_io/android-chrome-512x512.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["actions/*"],
      "matches": ["*://*.overleaf.com/*"]
    }
  ]
}